---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="bg-gray-100 dark:bg-gray-800 py-16 text-center">
  <div class="container mx-auto px-6">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-800 dark:text-white">
      {title}
    </h1>
  </div>
</section>
